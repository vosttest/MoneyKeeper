<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MoneyKeeper.Main.Views.Setting.Transaction">
    <ContentView.Content>
        <StackLayout>
            <Label Text="Setting Transaction"
                   FontSize="24"
                   TextColor="#1cb09a"
                   HorizontalOptions="CenterAndExpand"/>
            <Switch Toggled="Switch_Toggled"/>
            <Picker x:Name="pickerTransaction"
                    IsEnabled="False"
                    Title="-- Please Select --">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>OTP</x:String>
                        <x:String>TOKEN</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>
            <Button x:Name="buttonTransaction"
                    Clicked="Save_Clicked"
                    IsVisible="False"
                    Text="Save"
                    TextColor="White"
                    BackgroundColor="#1cb09a"
                    HeightRequest="50"/>
        </StackLayout>
    </ContentView.Content>
</ContentView>