<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MoneyKeeper.Main.Views.Setting.Lock">
    <ContentView.Content>
        <StackLayout>
            <Label Text="Setting Lock"
                   FontSize="24"
                   TextColor="#1cb09a"
                   HorizontalOptions="CenterAndExpand"/>
            <Switch Toggled="Switch_Toggled"/>
                <Button x:Name="buttonLock"
                        Clicked="Save_Clicked"
                        IsVisible="False"
                        Text="Save"
                        TextColor="White"
                        BackgroundColor="#1cb09a"
                        HeightRequest="50"/>
        </StackLayout>
    </ContentView.Content>
</ContentView>